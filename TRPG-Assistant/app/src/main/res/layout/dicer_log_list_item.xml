<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/diceHistoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/diceHistoryTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_creator="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_creator="8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/diceHistoryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_creator="8"
        app:layout_constraintTop_creator="8"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>